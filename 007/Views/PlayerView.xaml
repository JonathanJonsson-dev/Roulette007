<UserControl x:Class="_007.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
        Background="DarkSlateGray"
        BorderBrush="SaddleBrown" 
        CornerRadius="0"
        BorderThickness="5"
        Width="400"
        Height="250">
        <Grid>
            <Ellipse HorizontalAlignment="Left" Height="90" Margin="45,128,0,0" Stroke="AntiqueWhite" Fill="SaddleBrown" VerticalAlignment="Top" Width="90" />
            <Label Content="{Binding Name, FallbackValue=Player, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="45,37,0,0" VerticalAlignment="Top" Width="92" Foreground="AntiqueWhite" FontSize="24"/>
            <Label Content="Set Name" HorizontalAlignment="Left" Margin="209,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPotAmountHeader" Content="Pot" HorizontalAlignment="Left" Margin="209,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" FontSize="24" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPlayerName" Content="{Binding Name}" HorizontalAlignment="Left" Margin="127,92,0,0" Visibility="Hidden" VerticalAlignment="Top" Width="143" Foreground="AntiqueWhite"/>
            <Button x:Name="btnSet" Content="Set" Command="{Binding SetNameCommand}" HorizontalAlignment="Left" Margin="337,198,0,0" VerticalAlignment="Top" Width="43" Visibility="Visible" />
            <Button x:Name="btnResetGame" Content="Reset Game" Command="{Binding ResetGameCommand}" HorizontalAlignment="Left" Margin="52,158,0,0" VerticalAlignment="Top" Height="29" Width="76" Background="Transparent" BorderBrush="Transparent" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPotAmount" Content="{Binding Pot}" HorizontalAlignment="Left" Margin="209,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" Foreground="Black" FontSize="24" Height="40" Width="81" BorderBrush="SaddleBrown" BorderThickness="2" Background="White"/>
            <TextBox HorizontalAlignment="Left" Margin="209,199,0,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>



        </Grid>
    </Border>
</UserControl>
