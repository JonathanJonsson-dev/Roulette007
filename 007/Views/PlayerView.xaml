<UserControl x:Class="_007.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Border
        Background="DarkSlateGray"
        BorderBrush="SaddleBrown" 
        CornerRadius="0"
        BorderThickness="5"
        Width="400"
        Height="250">
        <Grid>
            <Ellipse HorizontalAlignment="Left" Height="90" Margin="11,140,0,0" Stroke="AntiqueWhite" Fill="SaddleBrown" VerticalAlignment="Top" Width="90" />
            <Border BorderThickness="2" BorderBrush="SaddleBrown" CornerRadius="5" HorizontalAlignment="Left" Height="99" Margin="205,63,0,0" VerticalAlignment="Top" Width="125"/>
            <Label Content="{Binding Name, FallbackValue=Player, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="370" Foreground="AntiqueWhite" FontSize="24"/>
            <Label Content="Set Name" HorizontalAlignment="Left" Margin="198,177,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPotAmountHeader" Content="Pot" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" FontSize="20" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPlayerName" Content="{Binding Name}" HorizontalAlignment="Left" Margin="127,92,0,0" Visibility="Hidden" VerticalAlignment="Top" Width="143" Foreground="AntiqueWhite"/>
            <Button x:Name="btnSet" Content="Set" Command="{Binding SetNameCommand}" HorizontalAlignment="Left" Margin="337,207,0,0" VerticalAlignment="Top" Width="43" Visibility="Visible" RenderTransformOrigin="-0.744,1.353" />
            <Button x:Name="btnResetGame" Content="Reset Game" Command="{Binding ResetGameCommand}" HorizontalAlignment="Left" Margin="18,170,0,0" VerticalAlignment="Top" Height="30" Width="76" Background="Transparent" BorderBrush="Transparent" Foreground="AntiqueWhite"/>
            <Label x:Name="lblPotAmount" Content="{Binding Pot}" HorizontalAlignment="Left" Margin="16,84,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" Foreground="Black" FontSize="24" Height="40" Width="106" BorderBrush="SaddleBrown" BorderThickness="2" Background="White"/>
            <TextBox x:Name="txtSetName" HorizontalAlignment="Left" Margin="208,208,0,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.8,0.599"/>
            <Button Content="Instructions" HorizontalAlignment="Left" Margin="228,84,0,0" Command="{Binding ShowInstructionsCommand}" VerticalAlignment="Top" RenderTransformOrigin="2.701,0.789" Width="78"/>
            <Button Content="Rules" HorizontalAlignment="Left" Margin="228,125,0,0" Command="{Binding ShowRulesCommand}" VerticalAlignment="Top" RenderTransformOrigin="-1.45,0.401" Width="78"/>




        </Grid>
    </Border>
</UserControl>
