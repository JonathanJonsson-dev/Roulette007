<UserControl x:Class="_007.Views.WheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             xmlns:ViewModel="clr-namespace:_007.ViewModels"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <UserControl.Resources>
        <!--<Storyboard x:Key="RotateWheel">
            <DoubleAnimation By=" 360"
                             Duration="0:0:0:1"
                             Storyboard.TargetProperty ="Text"
                             Storyboard.TargetName ="lblWheel"
                             RepeatBehavior="20x"
                             FillBehavior="Stop">
            </DoubleAnimation>
        </Storyboard>-->
    </UserControl.Resources>
    <Border x:Name="MainBorder" Background="Transparent" 
            Height="250" Width="250">
        <Grid x:Name="MainGrid" Margin="-50,-25,50,25" >

            <Canvas Background="Transparent">
                <!--Outermost wheel-->
                <Ellipse Height="400" 
                         Width="400"
                         Fill="Gray" Canvas.Top="-74" Canvas.Left="-55">
                    <Ellipse.RenderTransform>
                        <TranslateTransform X="25" 
                                            Y="50"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!--innermost wheel-->

                <Ellipse Height="200" 
                         Width="200"
                         Fill="DimGray"
                         Stroke="Goldenrod"
                         StrokeThickness="5" Canvas.Top="-44" Canvas.Left="-30">
                    <Ellipse.RenderTransform>
                        <TranslateTransform X="100" 
                                            Y="120"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <ItemsControl x:Name="WheelControl"
                              ItemsSource="{Binding WheelViewModel.WheelCollection}"
                              Width="{Binding WheelViewModel.MainBoardWidth, Mode=OneWay}"
                              Height="{Binding WheelViewModel.MainBoardHeight, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid >
                                <Label HorizontalAlignment="Left" VerticalAlignment="Top" 
                                           HorizontalContentAlignment="Center" 
                                       VerticalContentAlignment="Center" 
                                           Width="auto" Height="Auto"
                                           Foreground="White"  Content="{Binding Label, Mode=OneWay}">
                                    <Label.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="{Binding XPosition, Mode=OneWay}" 
                                                                Y="{Binding YPosition, Mode=OneWay}"></TranslateTransform>
                                            <RotateTransform CenterX="{Binding CenterPointX, Mode=OneWay}" 
                                                            CenterY="{Binding CenterPointY, Mode=OneWay}" 
                                                            Angle="{Binding AngularPosition, Mode=OneWay}">
                                            </RotateTransform>
                                        </TransformGroup>
                                    </Label.RenderTransform>
                                    <Label.Background>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Polygon Stroke="Goldenrod"  StrokeThickness="2" 
                                                         Points="{Binding Points, Mode=OneWay}">
                                                    <Polygon.RenderTransform>
                                                        <TransformGroup>
                                                            <RotateTransform CenterX="{Binding CenterPointX, Mode=OneWay}" 
                                                                             CenterY="{Binding CenterPointY, Mode=OneWay}" 
                                                                             Angle="{Binding AngularPosition, Mode=OneWay}">
                                                            </RotateTransform>
                                                        </TransformGroup>
                                                    </Polygon.RenderTransform>
                                                    <Polygon.Style>
                                                        <Style TargetType="Polygon">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsGreenNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="LimeGreen"></Setter>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRedNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="Red"></Setter>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsBlackNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="Black"></Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Polygon.Style>
                                                </Polygon>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Label.Background>
                                </Label>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button x:Name="btnSpin" 
                        BorderBrush="SaddleBrown" BorderThickness="5" 
                        Content="Spin Wheel" Width="150" Height="55" FontSize="20" Canvas.Top="405" RenderTransformOrigin="0.633,1.455" Canvas.Left="95">
                    <!--<Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource RotateWheel}">
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>-->
                </Button>
            </Canvas>
        </Grid>
    </Border>
</UserControl>