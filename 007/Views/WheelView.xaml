<UserControl x:Class="_007.Views.WheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             xmlns:models="clr-namespace:_007.Models"
             xmlns:commands="clr-namespace:_007.Commands"
             xmlns:viewModels="clr-namespace:_007.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <UserControl.Resources>
        <Storyboard x:Key="RotateWheel">
            <DoubleAnimation By="360"
                             Duration="0:0:0:5"
                             Storyboard.TargetProperty ="Angle"
                             Storyboard.TargetName ="WheelSpin"
                             RepeatBehavior="Forever"
                             FillBehavior="Stop"/>
        </Storyboard>
    </UserControl.Resources>
    <Border Background="Transparent">
        <Grid>
            <Canvas Background="Transparent">
                <Ellipse Height="400"
                         Width="400"
                         RenderTransformOrigin="0.5, 0.5">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="SingleZero" ImageSource="Images/SingleZeroWheel.jpg"/>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="WheelSpin" Angle="{Binding Angle}"/>
                    </Ellipse.RenderTransform>

                </Ellipse>

                <Button x:Name="btnSpin" 
                        BorderBrush="SaddleBrown" BorderThickness="5" 
                        Content="Spin Wheel" Width="150" Height="55" FontSize="20" 
                        Canvas.Left="60" Canvas.Top="435">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource RotateWheel}">
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Button x:Name="Button" 
                        HorizontalContentAlignment="Center" 
                        Content="{Binding WinningNumber}" 
                        Command="{Binding SpinnWheelCommand}" 
                        BorderBrush="SaddleBrown" BorderThickness="5" Width="150" Height="55" FontSize="20" 
                        Canvas.Left="220" Canvas.Top="435"/>
            </Canvas>
        </Grid>
    </Border>
</UserControl>
