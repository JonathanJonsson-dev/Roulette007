<UserControl x:Class="_007.Views.WheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             xmlns:ViewModel="clr-namespace:_007.ViewModels"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <UserControl.Resources>
        <Storyboard x:Key="RotateWheel">
            <DoubleAnimation By=" 360"
                             Duration="0:0:0:1"
                             Storyboard.TargetProperty ="Angle"
                             Storyboard.TargetName ="WheelSpin"
                             RepeatBehavior="20x"
                             FillBehavior="Stop">
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Border x:Name="MainBorder" Background="Transparent" Margin="0,0,-17,0"
            Height="300" Width="300">
        <Grid x:Name="MainGrid" Margin="0,0,-15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="99*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Canvas Background="Transparent" Margin="0,0,-100,0" Grid.ColumnSpan="2">
                <!--Outermost wheel-->
                <Ellipse Height="400" 
                         Width="400"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Fill="Gray"
                         RenderTransformOrigin="0.5, 0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform X="25" Y="25"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                
                <!--innermost wheel-->
                
                <Ellipse Height="210" 
                         Width="210"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Fill="DimGray"
                         RenderTransformOrigin="0.5, 0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform X="120" Y="120"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <ItemsControl x:Name="WheelControl"
                              ItemsSource="{Binding WheelViewModel.WheelCollection}"
                              Width="300"
                              Height="300" 
                              RenderTransformOrigin="1.267,0.767" 
                              Canvas.Left="105" Canvas.Top="105">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Label HorizontalAlignment="Left" VerticalAlignment="Top" 
                                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                           Width="50" Height="50"
                                           Foreground="White"  Content="{Binding Label, Mode=OneWay}">
                                    <Label.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="0.5" Y="0.5"></TranslateTransform>
                                            <RotateTransform CenterX="{Binding CenterPointX, Mode=OneWay}" 
                                                            CenterY="{Binding CenterPointY, Mode=OneWay}" 
                                                            Angle="{Binding AngularPosition, Mode=OneWay}">
                                            </RotateTransform>
                                        </TransformGroup>
                                    </Label.RenderTransform>
                                    <Label.Background>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Polygon Stroke="White"  StrokeThickness="1" Points="{Binding Points, Mode=OneWay}">
                                                    <Polygon.RenderTransform>
                                                        <TransformGroup>
                                                            <RotateTransform CenterX="{Binding CenterPointX, Mode=OneWay}" 
                                                                             CenterY="{Binding CenterPointY, Mode=OneWay}" 
                                                                             Angle="{Binding AngularPosition, Mode=OneWay}">
                                                            </RotateTransform>
                                                        </TransformGroup>
                                                    </Polygon.RenderTransform>
                                                    <Polygon.Style>
                                                        <Style TargetType="Polygon">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsGreenNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="LimeGreen"></Setter>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRedNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="Red"></Setter>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsBlackNumber}" Value="True">
                                                                    <Setter Property="Fill" Value="Black"></Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Polygon.Style>
                                                </Polygon>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Label.Background>
                                </Label>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button x:Name="btnSpin" 
                        BorderBrush="SaddleBrown" BorderThickness="5" 
                        Content="Spin Wheel" Width="150" Height="55" FontSize="20" 
                        Canvas.Left="126" Canvas.Top="470" RenderTransformOrigin="0.633,1.455">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard Storyboard="{StaticResource RotateWheel}">
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <!--<Polygon Stroke="White" StrokeThickness="3" Points="0,0 90,0 70,100 20,100"/>-->

            </Canvas>
        </Grid>
    </Border>
</UserControl>