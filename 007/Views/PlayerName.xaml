<UserControl x:Class="_007.Views.PlayerName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_007.Views"
             mc:Ignorable="d" d:DesignWidth="350"
             x:Name="ucSetPlayerName" FontSize="20" Height="200">
    <Border BorderBrush="SaddleBrown" BorderThickness="5" Background="LightGray">
        <Grid Margin="10" Background="DarkSlateGray">
            <Label Content="Screen Name:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.843,5.1" Foreground="AntiqueWhite" Width="135" Height="39"/>
            <TextBox x:Name="txtSetName" HorizontalAlignment="Left" Margin="145,46,0,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" RenderTransformOrigin="1.331,1.577" Height="39"/>
            <Button x:Name="btnSet" Content="Save" BorderBrush="SaddleBrown" BorderThickness="2"
                    Command="{Binding SetNameCommand}" Click="btnSet_Click"
                    HorizontalAlignment="Left" Margin="148,103,0,0" VerticalAlignment="Top" Width="134" Visibility="Visible" RenderTransformOrigin="-0.744,1.353" />

        </Grid>
    </Border>
</UserControl>
