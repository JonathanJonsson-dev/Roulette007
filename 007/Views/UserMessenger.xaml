<Window x:Class="_007.Views.UserMessenger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_007.Views"
        mc:Ignorable="d"
        Height="450" Width="800" FontSize="18">

    <Border BorderBrush="SaddleBrown" BorderThickness="5" Background="LightGray">
        <Grid Margin="10" Background="DarkSlateGray">
            <Label x:Name="lblTitle" HorizontalAlignment="Center" Height="40" Margin="0,39,0,335" MinWidth="50"/>
            <TextBlock x:Name="txbMessage" VerticalAlignment="Top" HorizontalAlignment="Center" 
                       Margin="0 100 0 0" TextWrapping="Wrap"/>
            <Button x:Name="btnOK" Content="OK" Width="100" Margin="0,314,0,50" FontSize="24" Height="40"
                    HorizontalAlignment="Center" Background="LightGray" 
                    BorderBrush="SaddleBrown" BorderThickness="2"/>
        </Grid>
    </Border>
</Window>
